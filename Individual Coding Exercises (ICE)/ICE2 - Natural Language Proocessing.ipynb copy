   "metadata": {},
   "outputs": [],
   "source": [
    "import string\n",
    "def clean_text(text):\n",
    "    # Make text lowercase, remove punctuations, and remove numbers\n",
    "    text = text.lower()\n",
    "    text = re.sub('[%s]' % re.escape(string.punctuation), '', text)\n",
    "    text = re.sub('[0-9]+','', text)\n",
    "    return text"
   ]
  },
